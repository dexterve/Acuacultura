<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Crecimiento.TasaAlimentacionActivity"
    android:weightSum="1">

    <include layout="@layout/actionbar_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/lblDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TextView
            android:paddingTop="@dimen/paddingTop"
            android:id="@+id/lblMEdidas"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textSize="14dp"
            android:layout_gravity="center"/>

        <TextView
            android:paddingTop="@dimen/paddingTop"
            android:id="@+id/lblPorce"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textSize="14dp"
            android:layout_gravity="center"/>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/tilNumOrganismos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginCreateAcount"
            android:paddingTop="@dimen/paddingTop"
            android:textColorHint="@color/colorPrimary">

            <EditText
                android:id="@+id/txtNumOrganismos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numero de Organismos"
                android:inputType="number|numberDecimal"
                android:shadowColor="@color/colorPrimaryDark"
                android:textColor="@color/colorEditTextBlack"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:textColorLink="@color/colorPrimary"
                app:errorEnabled="true" />
        </android.support.design.widget.TextInputLayout>
        <!--android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextBlack"
            android:id="@+id/tilNumOrganismos">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_nombre"
                android:textAlignment="center"
                android:textSize="16sp"
                android:id="@+id/txtNumOrganismos"
                android:numeric="integer|signed|decimal"
                android:inputType="number|numberSigned|numberDecimal"
                android:textColor="?attr/actionMenuTextColor" />
    </android.support.design.widget.TextInputLayout-->



            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Porsentaje de alimentacion"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:layout_above="@+id/spinner" />

            <Spinner
                android:paddingTop="@dimen/paddingTop"
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnCalcularr"
            android:paddingTop="@dimen/paddingTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:layout_gravity="center"
            android:theme="@style/RaisedButtonDark"/>

        <TextView
            android:id="@+id/lblResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paddingTop"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

    </LinearLayout>

</LinearLayout>