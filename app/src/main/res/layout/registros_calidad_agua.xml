<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_lista_detalle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/lblFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fecha"
                android:textColor="@android:color/black"
                android:textSize="@dimen/TextsizeBottomMenu" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/lblTemperatura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/lblFecha"
                        android:text="Fecha"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/TextsizeBottomMenu" />

                    <TextView
                        android:id="@+id/lblPH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingLeft="50dp"
                        android:text="Fecha"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/TextsizeBottomMenu" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/lblturbidez"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/txtTemp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/txtTemp"
                        android:text="Fecha"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/TextsizeBottomMenu" />

                    <TextView
                        android:id="@+id/txtTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/lblTemperatura"
                        android:layout_alignBottom="@+id/lblTemperatura"
                        android:layout_toEndOf="@+id/lblTemperatura"
                        android:layout_toRightOf="@+id/lblTemperatura"
                        android:text="Fecha"
                        android:textColor="@android:color/black"
                        android:paddingLeft="50dp"
                        android:textSize="@dimen/TextsizeBottomMenu" />
                </TableRow>

            </TableLayout>


        </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/heihDivider"
        android:background="@android:color/darker_gray">

    </View>

    </LinearLayout>